<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="5dp">

            <TextView android:id="@+id/repository_title"
                style="@style/repositoryItemText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView android:id="@+id/repository_description"
                style="@style/repositoryItemText"
                android:layout_marginTop="5dp"
                android:maxLines="4"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repository_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/lightGrey"
            app:layout_constraintTop_toBottomOf="@+id/upper_layout">

            <ImageView android:id="@+id/repository_picture"
                android:src="@drawable/ic_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView android:id="@+id/username"
                style="@style/repositoryItemText"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toRightOf="@id/repository_picture"
                app:layout_constraintTop_toTopOf="@id/repository_picture" />

            <TextView android:id="@+id/complete_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toRightOf="@id/repository_picture"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView android:id="@+id/star_count"
                style="@style/repositoryItemText"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/star_icon"
                style="@style/repositoryItemIcon"
                android:src="@drawable/ic_star"
                app:layout_constraintRight_toLeftOf="@+id/star_count"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView android:id="@+id/fork_count"
               style="@style/repositoryItemText"
                android:layout_marginEnd="30dp"
                app:layout_constraintRight_toLeftOf="@+id/star_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView android:id="@+id/fork_icon"
                style="@style/repositoryItemIcon"
                android:src="@mipmap/ic_fork"
                app:layout_constraintRight_toLeftOf="@+id/fork_count"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>