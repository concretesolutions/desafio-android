<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rafael.fernandes.desafioconcrete">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:name=".AndroidApplication"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity android:name=".ui.activities.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.main.MainActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".ui.activities.pullrequest.PullRequestActivity"
                  android:theme="@style/AppTheme"/>
        <activity android:name=".ui.activities.main.GitRepositoriesActivity"
                  android:theme="@style/AppTheme"/>


    </application>

</manifest>