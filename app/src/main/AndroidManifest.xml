<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silvioapps.githubkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.silvioapps.githubkotlin.di.applications.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.silvioapps.githubkotlin.features.splash_screen.activities.SplashScreenActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.silvioapps.githubkotlin.features.list.activities.MainActivity"/>
        <activity android:name="com.silvioapps.githubkotlin.features.details.activities.DetailsActivity"/>
    </application>

</manifest>