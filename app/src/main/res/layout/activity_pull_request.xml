<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".repository.view.RepositoryActivity">

    <TextView
            android:id="@+id/ivPullRequestAvatar"
            android:text="16 opened / 800 closed"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/pullRequestRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            tools:listitem="@layout/item_pull_request"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPullRequestAvatar"/>

    <ProgressBar
            android:id="@+id/pbRepository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/ivPullRequestAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivPullRequestAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/pullRequestRecycler"
            app:layout_constraintTop_toTopOf="@+id/pullRequestRecycler"/>

    <include
            android:id="@+id/include_error_repository"
            layout="@layout/error_layout_repository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/ivPullRequestAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivPullRequestAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/pullRequestRecycler"
            app:layout_constraintTop_toTopOf="@+id/pullRequestRecycler"/>

</android.support.constraint.ConstraintLayout>