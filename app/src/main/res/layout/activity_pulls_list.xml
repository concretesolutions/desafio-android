<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pullslist.PullsListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pullsRecyclerView"
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pullsProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pullsRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/pullsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pullsRecyclerView" />

    <TextView
        android:id="@+id/isEmptyPullsListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_empty_pull_list_txt"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pullsRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/pullsRecyclerView"
        app:layout_constraintStart_toStartOf="@+id/pullsRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/pullsRecyclerView"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>