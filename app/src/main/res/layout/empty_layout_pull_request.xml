<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clErrorLayoutRepository">

    <ImageView
            android:id="@+id/ivEmptyLayout"
            android:src="@drawable/ic_alert_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txError"
            android:text="@string/list_pull_request_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ivEmptyLayout"
            app:layout_constraintEnd_toEndOf="@id/ivEmptyLayout"
            app:layout_constraintTop_toBottomOf="@id/ivEmptyLayout"/>

</android.support.constraint.ConstraintLayout>