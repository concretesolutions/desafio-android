<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
  <data>

    <variable
        name="fragmentPullViewModel"
        type="com.example.desafioandroid.viewModel.PullViewModel"/>
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:showIn="@layout/activity_main"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@color/colorIcons"
  >
    <ProgressBar
        android:id="@+id/pull_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:visibility="@{fragmentPullViewModel.pullProcess}"/>

    <TextView
        android:id="@+id/label_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@{fragmentPullViewModel.messageLabel}"
        app:visibility="@{fragmentPullViewModel.labelStatus}"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_pull"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:visibility="@{fragmentPullViewModel.recyclerPull}"
        tools:listitem="@layout/card_repository"
        android:background="@color/colorDivider"
    />

  </LinearLayout>
</layout>