<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_repo"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_width="389dp"
        android:layout_height="152dp"
        android:background="@color/white">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_name"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:textAlignment="textStart"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_repo_description"
            app:layout_constraintEnd_toStartOf="@+id/iv_avatar_user"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_repo_description"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_forks"
            app:layout_constraintEnd_toStartOf="@+id/iv_avatar_user"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_repo_name" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_avatar_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tv_owner_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_fork"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_forks"
            app:layout_constraintTop_toBottomOf="@id/tv_repo_description"
            app:layout_constraintVertical_bias="0.65" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_forks"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:hint="tv_fork"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_star"
            app:layout_constraintTop_toBottomOf="@+id/tv_repo_description" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_star"
            app:layout_constraintTop_toBottomOf="@id/tv_repo_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_star"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:clickable="true"
            android:hint="tv_star"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_owner_full_name"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/tv_repo_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_owner_name"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_owner_full_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_user" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_owner_full_name"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/tv_owner_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>