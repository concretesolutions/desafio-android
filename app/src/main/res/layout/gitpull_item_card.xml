<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout_gitPull_item_card"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            android:text="TextView"
            tools:text="Pull Request Title"
            android:textSize="@dimen/font_xlarge"
            android:layout_width="0dp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gitPullItemCard_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_gitPullItemCard_avatar"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:fontFamily="@font/roboto"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_default"
            android:lines="2"
            tools:text="Mussum Ipsum, cacilds vidis litro abertis. Delegadis gente finis, bibendum egestas augue arcu , "
            android:ellipsize="end"
            android:id="@+id/textView_gitPullItemCard_description"
            app:layout_constraintStart_toStartOf="@+id/textView_gitPullItemCard_title"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView_gitPullItemCard_createdAt"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView_gitPullItemCard_avatar"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_gitPullItemCard_avatar"
            app:layout_constraintTop_toTopOf="@+id/textView_gitPullItemCard_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/textView_gitPullItemCard_username"
            app:layout_constraintStart_toStartOf="@+id/imageView_gitPullItemCard_avatar"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light_italic"
            app:layout_constraintTop_toBottomOf="@+id/imageView_gitPullItemCard_avatar"
            app:layout_constraintEnd_toEndOf="@+id/imageView_gitPullItemCard_avatar"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/view3"
            android:background="@color/cardview_dark_background"
            app:layout_constraintStart_toStartOf="@+id/textView_gitPullItemCard_description"
            app:layout_constraintEnd_toEndOf="@+id/imageView_gitPullItemCard_avatar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_gitPullItemCard_description"/>
    <TextView
            android:text="TextView"
            tools:text="09/02/1993 - 22"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gitPullItemCard_createdAt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_gitPullItemCard_title"
            app:layout_constraintStart_toStartOf="@+id/textView_gitPullItemCard_title"
    />
</androidx.constraintlayout.widget.ConstraintLayout>