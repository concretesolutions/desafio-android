<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/cv_pull_name"
                android:textSize="@dimen/title_card_size"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:padding="8dp"
                android:text="repo name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/cv_pull_desc"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/subtitle_card_size"
                android:textColor="@color/black"
                android:padding="8dp"
                android:text="repo description"
                android:typeface="monospace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@color/white"
                    android:id="@+id/cv_contributor_avatar"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            <LinearLayout
                    android:padding="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/cv_contributor_name"
                        android:maxLines="2"
                        android:textColor="@color/blue"
                        android:ellipsize="end"
                        android:textSize="@dimen/subtitle_card_size"
                        android:textStyle="bold"
                        android:text="collaborator name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/cv_contributor_alias"
                        android:typeface="sans"
                        android:textSize="@dimen/subtitle_card_size"
                        android:textColor="@color/black"
                        android:text="date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>