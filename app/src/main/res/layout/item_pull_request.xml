<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/pull_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:text="Nombre Repositorio"/>
        <TextView
                android:id="@+id/pull_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pull_title"
                android:layout_marginRight="100dp"
                android:layout_marginEnd="100dp"
                android:text="DescripciÃ³n"
                android:ellipsize="end"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/pull_description"
                android:orientation="horizontal">
            <android.support.v7.widget.CardView
                    android:id="@+id/pull_user_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:elevation="5dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin">
                <ImageView
                        android:id="@+id/pull_user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="35dp"
                        android:maxWidth="35dp"
                        android:minHeight="35dp"
                        android:minWidth="35dp"
                        android:src="@drawable/ic_action_person_light"
                        android:contentDescription="@string/app_name"/>
            </android.support.v7.widget.CardView>
            <TextView
                    android:id="@+id/pull_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/pull_user_image_container"
                    android:textColor="@color/colorAccent"
                    android:text="User Name"/>
            <TextView
                    android:id="@+id/pull_user_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/pull_user_image_container"
                    android:layout_below="@+id/pull_user_name"
                    android:text="Nickname"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>