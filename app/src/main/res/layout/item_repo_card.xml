<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:background="@color/black"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@color/white"
                    android:id="@+id/cv_avatar"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            <TextView
                    android:id="@+id/cv_owner_name"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/title_card_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:visibility="gone"
                    android:id="@+id/cv_owner_alias"

                    android:textSize="@dimen/subtitle_card_size"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="sobrenombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:background="@color/white"
                android:padding="8dp"
                android:weightSum="4"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cv_repo_name"
                    android:textSize="@dimen/title_card_size"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/cv_repo_desc"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:minLines="3"
                    android:textSize="@dimen/subtitle_card_size"
                    android:textColor="@color/black"
                    android:typeface="monospace"
                    android:text="subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/cv_repo_forks"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/title_card_size"
                        android:textStyle="bold"
                        android:textColor="#FFFFC107"
                        android:layout_gravity="center"
                        android:text="0"
                        android:drawableStart="@drawable/ic_call_merge_black_24dp"
                        android:drawableLeft="@drawable/ic_call_merge_black_24dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/cv_repo_stars"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_star_black_24dp"
                        android:drawableLeft="@drawable/ic_star_black_24dp"

                        android:textSize="@dimen/title_card_size"
                        android:textStyle="bold"
                        android:textColor="#FFFFC107"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>