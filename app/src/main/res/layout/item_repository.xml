<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">


    <RelativeLayout
        android:layout_toStartOf="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_above="@+id/fork_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtName"
                android:text="Nome Repositório"
                style="@style/Text.Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtDescription"
                android:text="Descriçao do repositório"
                style="@style/Text.Description"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fork_layout"
            android:gravity="start|center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:src="@drawable/ic_fork"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/txtFork"
                android:text="0"
                android:layout_marginStart="3dp"
                style="@style/Text.Fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/ic_star"
                android:layout_marginStart="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/txtStar"
                android:text="0"
                android:layout_marginStart="3dp"
                style="@style/Text.Fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgUser"
            android:src="@drawable/ic_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/txtUsername"
            android:text="username"
            style="@style/Text.Username"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:id="@+id/txtFullname"
            android:text="Nome Sobrenome"
            style="@style/Text.Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>