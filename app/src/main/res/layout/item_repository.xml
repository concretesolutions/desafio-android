<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/repository_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Nombre Repositorio"/>
        <TextView
                android:id="@+id/repository_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repository_title"
                android:layout_marginRight="100dp"
                android:layout_marginEnd="100dp"
                android:text="DescripciÃ³n"
                android:ellipsize="end"/>
        <TextView
                android:id="@+id/repository_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repository_description"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_action_git_custom"
                android:drawableStart="@drawable/ic_action_git_custom"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Forks"/>
        <TextView
                android:id="@+id/repository_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repository_description"
                android:layout_toRightOf="@+id/repository_forks"
                android:layout_toEndOf="@+id/repository_forks"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:drawableLeft="@drawable/ic_action_star_custom"
                android:drawableStart="@drawable/ic_action_star_custom"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Stars"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
            <android.support.v7.widget.CardView
                    android:id="@+id/repository_user_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:elevation="5dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                <ImageView
                        android:id="@+id/repository_user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="50dp"
                        android:maxWidth="50dp"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:src="@drawable/ic_action_person_light"
                        android:contentDescription="@string/app_name"/>
            </android.support.v7.widget.CardView>
            <TextView
                    android:id="@+id/repository_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="User Name"/>
            <TextView
                    android:id="@+id/repository_user_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nickname"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>