<?xml version="1.0" encoding="utf-8"?>
<layout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp"
    android:elevation="9dp"
    android:clipToPadding="false"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:cardBackgroundColor="@android:color/transparent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingStart="10dp"
            android:paddingTop="1dp">

            <ProgressBar
                android:id="@+id/lr_progressbar"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lr_im_avatar"
                android:layout_width="44dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lr_tx_login"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Nome Autor"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/lr_im_avatar"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="@+id/lr_im_avatar"
                app:layout_constraintTop_toBottomOf="@+id/lr_im_avatar" />

            <TextView
                android:id="@+id/lr_tx_starts"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/lr_tx_forks"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.323" />

            <TextView
                android:id="@+id/lr_tx_forks"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/lr_im_stars"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/star_50"
                app:layout_constraintBottom_toBottomOf="@+id/lr_tx_starts"
                app:layout_constraintEnd_toStartOf="@+id/lr_tx_starts"
                app:layout_constraintTop_toTopOf="@+id/lr_tx_starts"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/lr_im_forks"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:src="@drawable/fork_50"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/lr_tx_forks"
                app:layout_constraintEnd_toEndOf="@+id/lr_im_stars"
                app:layout_constraintStart_toStartOf="@+id/lr_im_stars"
                app:layout_constraintTop_toTopOf="@+id/lr_tx_forks"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lr_tx_repository_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Repositorio"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/lr_im_forks"
                app:layout_constraintEnd_toStartOf="@+id/lr_im_forks"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toEndOf="@+id/lr_im_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.120000005" />

            <TextView
                android:id="@+id/lr_tx_repository_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Descricao Repositorio"
                android:textSize="10dp"
                app:layout_constraintEnd_toStartOf="@+id/lr_im_forks"
                app:layout_constraintStart_toEndOf="@+id/lr_tx_login"
                app:layout_constraintTop_toBottomOf="@+id/lr_tx_repository_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
