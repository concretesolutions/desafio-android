<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/layoutRepositorie"
        android:layout_width="263dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/layoutUser"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtNomeRepositorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Repositório"
            android:textColor="#2196F3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescRepositorio"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="descrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositóriodescrição do repositório" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtNumerFork"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:drawableLeft="@drawable/ic_repo_forked"
                android:text="640"
                android:textColor="#FF9800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtStars"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_star"
                android:text="98"
                android:textColor="#FF9800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtNumerFork" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutRepositorie"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Username"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/txtNomeSobrenome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nome Sobrenome" />
    </LinearLayout>


</LinearLayout>