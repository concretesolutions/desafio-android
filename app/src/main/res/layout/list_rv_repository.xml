<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="repository" type="com.dobler.desafio_android.data.model.GithubRepository"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:minHeight="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/rvRepositoryName"
                      tools:text="name"
                      app:layout_constraintWidth_percent="0.70"
                      android:text="@{repository.name}"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                      android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                      android:layout_marginTop="8dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/rvRepostoryDescription"
                      tools:text="description"
                      app:layout_constraintWidth_percent="0.70"
                      android:text="@{repository.description}"
                      app:layout_constraintStart_toStartOf="@+id/rvRepositoryName"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/rvRepositoryName"
                      android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>


            <TextView
                    android:id="@+id/txtTotalForks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`` + repository.total_forks}"
                    android:textAppearance="?textAppearanceSubtitle2"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_fork"
                    android:drawablePadding="4dp"
                    tools:text="50"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintTop_toBottomOf="@+id/rvRepostoryDescription"
                    app:layout_constraintStart_toStartOf="@+id/rvRepositoryName"
                    android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            <include layout="@layout/list_rv_user" app:user="@{repository.owner}"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>