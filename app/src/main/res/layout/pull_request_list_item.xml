<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pullRequest_tvPullRequestTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/darkBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/pullRequest_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pullRequest_tvPullRequestDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textSize="13sp"
            android:textColor="@color/lightGray"
            android:text="@string/pullRequest_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pullRequest_tvPullRequestTitle" />

        <TextView
            android:id="@+id/pullRequest_tvPullRequestUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/pullRequest_ownername"
            app:layout_constraintStart_toEndOf="@+id/pullRequest_ivPullRequestUserPicture"
            app:layout_constraintTop_toTopOf="@+id/pullRequest_ivPullRequestUserPicture" />

        <TextView
            android:id="@+id/pullRequest_tvPullRequestCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/pullRequest_date"
            app:layout_constraintStart_toEndOf="@+id/pullRequest_ivPullRequestUserPicture"
            app:layout_constraintTop_toBottomOf="@+id/pullRequest_tvPullRequestUserName" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pullRequest_ivPullRequestUserPicture"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pullRequest_tvPullRequestDescription"
            android:contentDescription="@string/pullRequest_forkOwnerPicture"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>