<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/margin_4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_16dp">

        <TextView
            android:id="@+id/repositoryName"
            style="@style/margin_8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:layout_marginRight="@dimen/margin_40dp"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_bold"
            android:maxLines="1"
            android:text="RxJava"
            android:textColor="@color/transitionBlue"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toStartOf="@+id/userImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repositoryDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:layout_marginRight="@dimen/margin_40dp"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_regular"
            android:maxLines="2"
            android:text="The most popular repo in Githubbyhblhblhblhblhblbhlhbhbhbhb"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toStartOf="@+id/userImage"
            app:layout_constraintStart_toStartOf="@+id/repositoryName"
            app:layout_constraintTop_toBottomOf="@+id/repositoryName" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            style="@style/margin_16dp"
            android:layout_width="@dimen/view_40dp"
            android:layout_height="@dimen/view_40dp"
            android:layout_marginEnd="@dimen/margin_32dp"
            android:layout_marginRight="@dimen/margin_32dp"
            android:src="@drawable/img_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/repositoryName" />

        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="@dimen/view_100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="caiodev"
            android:textColor="@color/transitionBlue"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="@+id/userImage"
            app:layout_constraintStart_toStartOf="@+id/userImage"
            app:layout_constraintTop_toBottomOf="@+id/userImage" />

        <TextView
            android:id="@+id/ownerNameTextView"
            android:layout_width="@dimen/view_100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_medium"
            android:gravity="center"
            android:maxLines="1"
            android:text="Caio vitor"
            android:textSize="@dimen/text_size_12"
            app:layout_constraintEnd_toEndOf="@+id/userImage"
            app:layout_constraintStart_toStartOf="@+id/userImage"
            app:layout_constraintTop_toBottomOf="@+id/userNameTextView" />

        <ImageView
            android:id="@+id/forkIcon"
            android:layout_width="@dimen/view_16dp"
            android:layout_height="@dimen/view_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:src="@drawable/ic_fork"
            app:layout_constraintStart_toStartOf="@+id/repositoryName"
            app:layout_constraintTop_toBottomOf="@+id/repositoryDescription"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/numberOfForks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:fontFamily="@font/metropolis_regular"
            android:maxLength="7"
            android:text="9999"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/forkIcon"
            app:layout_constraintStart_toEndOf="@+id/forkIcon"
            app:layout_constraintTop_toTopOf="@+id/forkIcon" />

        <ImageView
            android:id="@+id/starIcon"
            android:layout_width="@dimen/view_20dp"
            android:layout_height="@dimen/view_20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@+id/numberOfForks"
            app:layout_constraintStart_toEndOf="@+id/numberOfForks"
            app:layout_constraintTop_toTopOf="@+id/numberOfForks"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/numberOfStarsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:fontFamily="@font/metropolis_regular"
            android:maxLength="7"
            android:text="9999"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/starIcon"
            app:layout_constraintStart_toEndOf="@+id/starIcon"
            app:layout_constraintTop_toTopOf="@+id/starIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>