<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/grey"
        app:cardElevation="0.5dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/username_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/repo_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/archivo_black"
                android:textColor="@color/blue_title"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.095" />

            <TextView
                android:id="@+id/description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/archivo_medium"
                android:textSize="14sp"
                android:lines="2"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/repo_name" />

            <ImageView
                android:id="@+id/fork_icon"
                android:src="@drawable/fork_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:contentDescription="@string/fork_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <TextView
                android:id="@+id/fork_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_black"
                android:padding="3dp"
                app:layout_constraintStart_toEndOf="@id/fork_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <ImageView
                android:id="@+id/star_icon"
                android:src="@drawable/star_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:contentDescription="@string/star_icon"
                app:layout_constraintStart_toEndOf="@id/fork_number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/star_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:padding="3dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/star_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:fontFamily="@font/archivo_black"
                android:padding="3dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/star_icon"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@id/imageView"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>