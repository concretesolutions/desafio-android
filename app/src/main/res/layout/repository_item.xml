<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/normal_margin"
    android:background="@drawable/item_background"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_repo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_repo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/normal_margin"
                    android:layout_height="@dimen/normal_margin"
                    android:contentDescription="@string/imagem"
                    android:src="@drawable/ic_fork" />

                <TextView
                    android:id="@+id/text_view_forks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/normal_margin"
                    android:layout_height="@dimen/normal_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:contentDescription="@string/imagem"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/text_view_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_avatar"
                android:layout_width="@dimen/size"
                android:layout_height="@dimen/size"
                android:contentDescription="@string/imagem" />

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
