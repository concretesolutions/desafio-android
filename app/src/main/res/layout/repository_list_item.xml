<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:id="@+id/repositoryListItem_clOuterLayout">

        <View
            android:id="@+id/repositoryListItem_vwColoredLine"
            android:layout_width="5dp"
            android:layout_height="145dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/repositoryListItem_clInnerLeftLayout"
            android:layout_width="0dp"
            android:layout_height="145dp"
            app:layout_constraintEnd_toStartOf="@+id/repositoryListItem_clInnerRightLayout"
            app:layout_constraintStart_toEndOf="@+id/repositoryListItem_vwColoredLine">

            <TextView
                android:id="@+id/repositoryListItem_tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/repositoryListItem_title"
                android:textColor="@color/darkBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/repositoryListItem_tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/repositoryListItem_description"
                android:textColor="@color/lightGray"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repositoryListItem_tvTitle" />

            <TextView
                android:id="@+id/repositoryListItem_starCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repositoryListItem_starcount"
                android:textColor="@color/lightGray"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/repositoryListItem_ivFavorite"
                app:layout_constraintTop_toTopOf="@+id/repositoryListItem_ivFavorite" />

            <TextView
                android:id="@+id/repositoryListItem_forkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/repositoryListItem_forkcount"
                android:textColor="@color/lightGray"
                app:layout_constraintStart_toEndOf="@+id/repositoryListItem_ivFork"
                app:layout_constraintTop_toTopOf="@+id/repositoryListItem_ivFork"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/repositoryListItem_ivFork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/repositoryListItem_tvTitle"
                app:srcCompat="@drawable/ic_fork_24dp"
                android:contentDescription="@string/repositoryListItem_ForkIconContentDescription" />

            <ImageView
                android:id="@+id/repositoryListItem_ivFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/repositoryListItem_forkCount"
                app:srcCompat="@drawable/ic_favorite_24dp"
                android:contentDescription="@string/repositoryListItem_favoriteIconContentDescription" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="145dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/repositoryListItem_clInnerRightLayout">

            <TextView
                android:id="@+id/repositoryListItem_tvOwnerName"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/repositoryListItem_ownerName"
                android:textColor="@color/lightGray"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repositoryListItem_ivOwnerPicture" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/repositoryListItem_ivOwnerPicture"
                android:layout_width="86dp"
                android:layout_height="86dp"
                app:layout_constraintBottom_toTopOf="@+id/repositoryListItem_tvOwnerName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/repositoryListItem_repositoryOwnerPictureContentDescription"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
