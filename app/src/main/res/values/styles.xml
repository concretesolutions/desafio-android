<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="RecyclerViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ProgressbarActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MessageActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="LayoutItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">1dp</item>
    </style>

    <style name="AvatarItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NameOwnerItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TitleItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="BodyItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">10sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="DataItemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:height">11dp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="StarForkTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="StarForkImageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

</resources>