<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/Desafio.TextView</item>
        <item name="toolbarStyle">@style/Desafio.Toolbar</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/lighter_gray</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:listDivider">@drawable/line_divider</item>
    </style>

    <!-- TextAppearance  -->
    <style name="Desafio.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="Desafio.TextAppearance.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Desafio.TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Desafio.TextAppearance.Large">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <!-- Toolbar  -->
    <style name="Desafio.Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/Desafio.Toolbar.Title</item>
    </style>

    <style name="Desafio.Toolbar.Title" parent="Desafio.TextAppearance.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView  -->
    <style name="Desafio.TextView" parent="android:Widget.TextView">
        <item name="android:textColorPrimary">@color/text_color_light</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">@style/Desafio.TextAppearance</item>
        <item name="android:textAppearanceLarge">@style/Desafio.TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/Desafio.TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/Desafio.TextAppearance.Small</item>
    </style>

    <style name="Desafio.TextView.Light">
        <item name="android:textColorPrimary">@color/text_color_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!-- Custom Themes -->
    <style name="Desafio.TextView.Title">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textAppearance">@style/Desafio.TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Desafio.TextView.Description">
        <item name="android:textAppearance">@style/Desafio.TextAppearance.Small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Desafio.TextView.Counter">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAppearance">@style/Desafio.TextAppearance.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Desafio.TextView.UserLogin">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textAppearance">@style/Desafio.TextAppearance.Small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end|center</item>
    </style>

</resources>
