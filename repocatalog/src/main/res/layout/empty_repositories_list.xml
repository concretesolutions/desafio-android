<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/error_image_view_empty_repositories"
        android:layout_width="@dimen/sad_octocat_empty_list_width"
        android:layout_height="@dimen/sad_octocat_empty_list_height"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/material_margin_16dp"
        android:layout_marginStart="@dimen/material_margin_8dp"
        android:layout_marginEnd="@dimen/material_margin_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/content_description_sad_octocat"
        app:srcCompat="@drawable/octocat_sad" />

    <TextView
        android:id="@+id/message_text_view_empty_repositories"
        style="@style/default_text_style_item_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/material_margin_16dp"
        android:layout_marginTop="@dimen/material_margin_8dp"
        android:layout_marginEnd="@dimen/material_margin_16dp"
        android:layout_marginBottom="@dimen/material_margin_8dp"
        android:text="@string/no_repositories_message"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_image_view_empty_repositories" />

</androidx.constraintlayout.widget.ConstraintLayout>