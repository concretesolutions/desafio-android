<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/error_msg_list_item"
        android:textColor="?android:textColorPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/material_margin_8dp"
        tools:text="@string/mock_timeout_list_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/description_text_style_item_list"/>

    <android.widget.Button
        android:id="@+id/retry_button_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/ubuntu_regular"
        android:text="@string/retry_network_call_list_item"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/material_margin_8dp"
        android:padding="8dp"
        android:textColor="@color/background_color"
        android:background="@drawable/button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_msg_list_item"/>

    <ProgressBar
        android:id="@+id/progress_bar_list_item"
        android:progressTint="@color/color_accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/material_margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/retry_button_list_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?android:attr/progressBarStyleHorizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>