<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Item List Styles -->
    <style name="default_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="large_text_style" parent="default_text_style">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="title_default_style_item_list" parent="large_text_style">
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/list_item_title_text_color</item>
        <item name="android:layout_marginStart">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/material_margin_8dp</item>
    </style>

    <style name="description_text_style_item_list" parent="large_text_style">
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/list_item_default_text_color</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginTop">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_8dp</item>
    </style>

    <style name="default_text_style_item_list" parent="default_text_style">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/list_item_default_text_color</item>
        <item name="android:layout_marginStart">@dimen/material_margin_4dp</item>
        <item name="android:layout_marginTop">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/material_margin_8dp</item>
    </style>

    <style name="default_text_owner_style_item_list" parent="large_text_style">
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_item_title_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/material_margin_8dp</item>
    </style>

</resources>